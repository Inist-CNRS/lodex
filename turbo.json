{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "packages/admin-app/build/**",
                "packages/public-app/build/**"
            ]
        },
        "type-check": {},
        "dev:front": {
            "persistent": true,
            "cache": false
        },
        "dev:back": {
            "persistent": true,
            "cache": false
        }
    }
}
