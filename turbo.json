{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "packages/admin-app/build/**",
                "packages/public-app/build/**"
            ]
        },
        "type-check": {
            "dependsOn": [
                "^type-check"
            ]
        },
        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}
