{
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "target": "ES2023",
        "useDefineForClassFields": true,
        "lib": ["ES2023", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "moduleDetection": "force",
        "noEmit": true,
        "allowJs": true,
        "jsx": "react-jsx",

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "erasableSyntaxOnly": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true,
        "noImplicitAny": true,
        "types": ["cypress", "@testing-library/cypress"]
    },
    "include": [
        "vite.config.ts",
        "test-utils.tsx",
        "src/app",
        "packages/frontend-common/components/Catalog.tsx",
        "packages/frontend-common/components/ColorScaleLegend.tsx",
        "packages/frontend-common/components/ColorScalePreview.tsx",
        "packages/frontend-common/components/ColorSchemeSelector.tsx",
        "packages/frontend-common/components/ConfirmPopup.spec.tsx",
        "packages/frontend-common/components/ConfirmPopup.tsx",
        "packages/frontend-common/components/FormAutoCompleteField.tsx",
        "packages/frontend-common/components/FormPercentField.tsx",
        "packages/frontend-common/components/FormSelectField.tsx",
        "packages/frontend-common/components/FormSourceCodeField.tsx",
        "packages/frontend-common/components/FormSwitchField.tsx",
        "packages/frontend-common/components/FormTextField.tsx",
        "packages/frontend-common/components/getGradientScaleAndLegend.tsx",
        "packages/frontend-common/components/Link.tsx",
        "packages/frontend-common/components/Loading.tsx",
        "packages/frontend-common/components/NavButton.tsx",
        "packages/frontend-common/components/Pagination.tsx",
        "packages/frontend-common/components/SaveButton.spec.tsx",
        "packages/frontend-common/components/SaveButton.tsx",
        "packages/frontend-common/components/SortButton.tsx",
        "packages/frontend-common/components/SourceCodeField.tsx",
        "packages/frontend-common/components/TextField.spec.tsx",
        "packages/frontend-common/components/TextField.tsx",
        "packages/public-app/src/Property/addSchemePrefix.ts",
        "packages/public-app/src/Property/shouldDisplayField.ts",
        "packages/frontend-common/utils/getFieldClassName.ts",
        "packages/frontend-common/utils/alphabeticalSort.spec.ts",
        "packages/frontend-common/utils/alphabeticalSort.ts",
        "packages/frontend-common/utils/composeRenderProps.spec.tsx",
        "packages/frontend-common/utils/composeRenderProps.ts",
        "packages/frontend-common/utils/downloadFile.ts",
        "packages/frontend-common/utils/getColorSetFromField.ts",
        "packages/frontend-common/utils/getDocumentTransformer.ts",
        "packages/frontend-common/utils/getPercentage.spec.ts",
        "packages/frontend-common/utils/getPercentage.ts",
        "packages/frontend-common/utils/getQueryString.ts",
        "packages/frontend-common/utils/getTitle.ts",
        "packages/frontend-common/utils/interleave.spec.ts",
        "packages/frontend-common/utils/interleave.ts",
        "packages/frontend-common/utils/loadFile.ts",
        "packages/frontend-common/utils/longTexts.ts",
        "packages/frontend-common/utils/merge.ts",
        "packages/frontend-common/utils/sanitize.ts",
        "packages/frontend-common/utils/scrollToTop.ts",
        "packages/frontend-common/utils/selectors.spec.ts",
        "packages/frontend-common/utils/selectors.ts",
        "packages/frontend-common/utils/streamFile.ts",
